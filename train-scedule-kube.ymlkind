kind: Service 
apiVersion: v1
metadata:
  name: train-schedule-service
spec:
  type: NodePort
  selector:
    app: train-schedule
   ports:
   - protocol: TCP
     port: 8080
     nodePort: 8080
---

apiVersion: extentions/v1beta1
kind: Deployment
metadata:
  name: train-schedule-deployment
  lables:
    app: train-schedule
  spec:
    replicas: 2
    selector:
      matchLables:
        app: train-schedule
      template:
        metadata:
          lables:
            app: train-schedule
        spec:
          containes:
          - name: train-schedule
            image: $DOCKER_IMAGE_NAME:$BUILD_NUMBER
            ports:
            - containerPort: 8080
  
